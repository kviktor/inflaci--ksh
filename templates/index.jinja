{% extends "base.jinja" %}

{% block content %}
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-3">
        <div class="card-content white-text">
          <span class="card-title">Éves</span>
          <p>
            Egyes termékek és szolgáltatások éves fogyasztói átlagára
          </p>
          <br />
          <p>
            Forrás: <a href="https://www.ksh.hu/stadat_files/ara/hu/ara0004.html">https://www.ksh.hu/stadat_files/ara/hu/ara0004.html</a>
          </p>
        </div>
        <div class="card-action">
          <a href="eves.html">Éves diagram</a>
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="card blue-grey darken-3">
        <div class="card-content white-text">
          <span class="card-title">Havi</span>
          <p>
            Egyes termékek és szolgáltatások fogyasztói átlagára, havonta
          </p>
          <br />
          <p>
            Forrás: <a href="https://www.ksh.hu/stadat_files/ara/hu/ara0044.html">https://www.ksh.hu/stadat_files/ara/hu/ara0044.html</a>
          </p>
        </div>
        <div class="card-action">
          <a href="havi.html">Havi diagram</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-3">
        <div class="card-content white-text">
          <span class="card-title">Felhasznált eszközök</span>
          <p>
            <ul>
                <li><a href="https://ksh.hu">KSH</a> az adatok forrása</li>
                <li><a href="https://www.chartjs.org/">Chart.js</a> a diagramhoz</li>
                <li><a href="http://google.github.io/palette.js/">palette.js</a> a színekhez</li>
                <li><a href="https://materializecss.com/">Materialize</a> hogy kinézzen ez az egész valahogy</li>
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-3">
        <div class="card-content white-text">
          <span>Utolsó frissítés dátuma: {{ last_update }}</span>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
